
import java.util.Random;
import java.util.Scanner;
public class test2 {
	static int[][] b=new int[11][11];
	static String[][] c=new String[11][11];
	static int[] e=new int[4];
	static int x=0;
	static int y=0;
	static int d=0;
	public static void main(String[] args) {
		Scanner in=new Scanner(System.in);
		System.out.println("게임 시작 \nEnter를 누르세요.");
		in.nextLine();
		System.out.println("게임 인원을 선택해주세요.");
		int g=in.nextInt();
