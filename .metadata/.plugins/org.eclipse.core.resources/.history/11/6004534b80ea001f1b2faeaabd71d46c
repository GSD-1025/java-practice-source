		System.out.println("	┃  감옥  ┃  터키  ┃  쿠바  ┃  기부  ┃      ┃  경주  ┃  가나  ┃  중국  ┃  기부  ┃  대만  ┃  출발  ┃");
		System.out.println("	┃      ┃      ┃      ┃      ┃  포르  ┃      ┃      ┃      ┃      ┃      ┃      ┃");
		System.out.println("	┗━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┻━━━━━━┛");
		System.out.println(c[10][0]+"	       "+c[10][1]+"    "+c[10][2]+"    "+c[10][3]+"    "+c[10][4]+"    "+c[10][5]+"    "+c[10][6]+"    "+c[10][7]+"    "+c[10][8]+"    "+c[10][9]+"		"+c[10][10]);
	}
	public static void mapGo(int m) {
		int a=0;
		if(x==0&&y>0) {
			a=1;
		}else if(y==0&&x>0) {
			a=2;
		}else if(x==10&&y<10) {
			a=3;
		}else if(y==10&&x<10) {
			a=4;
		}
		for(int i=0; i<m; i++){
			if(x==0&&y==0){
				a=1;
			}
			if(x==10&&y==0){
				a=2;
			}
			if(x==10&&y==10){
				a=3;
			}
			if(x==0&&y==10){
				a=4;
			}
			if(a==1) {
				if(e[d]==1) {
					b[x][y]-=1000;
					y++;
					b[x][y]+=1000;
				}else if(e[d]==2) {
					b[x][y]-=200;
					y++;
					b[x][y]+=200;
				}else if(e[d]==3) {
					b[x][y]-=30;
					y++;
					b[x][y]+=30;
				}else if(e[d]==4) {
					b[x][y]-=4;
					y++;
					b[x][y]+=4;
				}
				
			}else if(a==2) {
				if(e[d]==1) {
					b[x][y]-=1000;
					x--;
					b[x][y]+=1000;
				}else if(e[d]==2) {
					b[x][y]-=200;
					x--;
					b[x][y]+=200;
				}else if(e[d]==3) {
					b[x][y]-=30;
					x--;
					b[x][y]+=30;
				}else if(e[d]==4) {
					b[x][y]-=4;
					x--;
					b[x][y]+=4;
				}
			}else if(a==3) {
				if(e[d]==1) {
					b[x][y]-=1000;
					y--;
					b[x][y]+=1000;
				}else if(e[d]==2) {
					b[x][y]-=200;
					y--;
					b[x][y]+=200;
				}else if(e[d]==3) {
					b[x][y]-=30;
					y--;
					b[x][y]+=30;
				}else if(e[d]==4) {
					b[x][y]-=4;
					y--;
					b[x][y]+=4;
				}
			}else if(a==4) {
				if(e[d]==1) {
					b[x][y]-=1000;
					x++;
					b[x][y]+=1000;
				}else if(e[d]==2) {
					b[x][y]-=200;
					x++;
					b[x][y]+=200;
				}else if(e[d]==3) {
					b[x][y]-=30;
					x++;
					b[x][y]+=30;
				}else if(e[d]==4) {
					b[x][y]-=4;
					x++;
					b[x][y]+=4;
				}
			}
		}
	}
	public static void nextTan(int a) {
		if(e[d]==a) {
			d=0;
		}else {
			d++;
		}
	}
}