				c[x][y]="";
			}
			if(x==0&&y==0){
				a++;
			}
			if(x==10&&y==0){
				a=2;
			}
			if(x==10&&y==10){
				a=3;
			}
			if(x==0&&y==10){
				a=4;
			}
			if(a==1) {
				x++;
			}else if(a==2) {
				y++;
			}else if(a==3) {
