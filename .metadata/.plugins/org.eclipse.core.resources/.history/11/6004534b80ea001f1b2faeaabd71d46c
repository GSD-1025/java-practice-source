				map();
				nextTan(g);
			}
		}
	}
	public static void randomPan(int a) {
		if(a==2) {
			b[10][0]=1200;
		}else if(a==3) {
			b[10][0]=1230;
		}else if(a==4) {
			b[10][0]=1234;
		}
		for(int i=0; i<a; i++) {
			e[i]=i+1;
		}
	}
	public static void random() {
		Random r=new Random();
		int k=r.nextInt(6)+1;
		if(e[d]==1) {
			for(int i=0; i<11; i++) {
				for(int j=0; j<11; j++) {
					if(b[i][j]/1000==1) {
						x=i;
						y=j;
						mapGo(k);
						i+=100;
						j+=100;
					}
				}
			}
		}else if(e[d]==2){
			for(int i=0; i<11; i++) {
				for(int j=0; j<11; j++) {
					if((b[i][j]/100)%10==2) {
						x=i;
						y=j;
						mapGo(k);
						i+=100;
						j+=100;
					}
				}
			}
			
		}else if(e[d]==3){	
			for(int i=0; i<11; i++) {
				for(int j=0; j<11; j++) {
					if((b[i][j]/10)%10==3) {
						x=i;
						y=j;
						mapGo(k);
						i+=100;
						j+=100;
					}
				}
			}
		}else if(e[d]==4){
			for(int i=0; i<11; i++) {
				for(int j=0; j<11; j++) {
					if(b[i][j]%10==4) {
						x=i;
						y=j;
						mapGo(k);
						i+=100;
						j+=100;
						
					}
				}
			}
		}
		
	}
	public static void map() {
