import javax.swing.*;
import java.awt.*;

public class practice extends JPanel {
    @Override
    protected void paintComponent(Graphics g) {
        super.paintComponent(g);
        
        // 노드 그리기
        g.setColor(Color.CYAN);
        g.fillRect(50, 50, 100, 50); // Start
        g.setColor(Color.BLACK);
        g.drawRect(50, 50, 100, 50);
        g.drawString("Start", 75, 80);

        g.setColor(Color.YELLOW);
        g.fillRect(200, 50, 100, 50); // Process 1
        g.setColor(Color.BLACK);
        g.drawRect(200, 50, 100, 50);
        g.drawString("Process 1", 215, 80);

        // 화살표 그리기
        g.drawLine(150, 75, 200, 75); // 화살표 연결

        // 그 외 추가 작업들
        // ...
    }

    public static void main(String[] args) {
        JFrame frame = new JFrame("Flowchart Example");
        SimpleFlowChart panel = new SimpleFlowChart();
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setSize(400, 200);
        frame.add(panel);
        frame.setVisible(true);
    }
}